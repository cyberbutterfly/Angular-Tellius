form(ng-submit="$ctrl.onSubmit()" novalidate).container

    .wizard-boxed
        .wizard-boxed-header
            img(src="assets/img/dataset/json.png")
            h1 JSON options

        .wizard-boxed-body
            md-input-container(layout="row", layout-align="start center")
                div(flex="grow")
                    h4 Flatten?
                div(flex)
                    md-switch.green.m0(id="flatten", ng-model="$ctrl.FormData.flatten", aria-label="Flatten", required="required")
    
        .wizard-boxed-footer
            md-button(type="reset", class="transparent") Cancel
            md-button(type="submit" value="submit") Load
