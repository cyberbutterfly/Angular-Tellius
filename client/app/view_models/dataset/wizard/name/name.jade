form(ng-submit="$ctrl.onSubmit()" novalidate ng-if="!$ctrl.progress").container

    .wizard-boxed
        .wizard-boxed-header
            img(src="assets/img/dataset/default.png")
            h1 Dataset name

        .wizard-boxed-body
            md-input-container
                label Name
                input(id="name"
                      ng-model="$ctrl.FormData.name"
                      required="required")

            md-checkbox(ng-model="$ctrl.FormData.cache" aria-label="Cache dataset in memory?") Cache dataset in memory?

        .wizard-boxed-footer
            md-button(type="reset", class="transparent") Cancel
            md-button(type="submit" value="submit") Save

        .wizard-boxed-errors(ng-show="$ctrl.errors.length")
            span {{$ctrl.errors}}

.container(ng-if="$ctrl.progress")
    .wizard-boxed
      .wizard-boxed-header
          h1 Dataset is being uploaded

      .wizard-boxed-body
          md-input-container
            md-progress-linear(value="{{ $ctrl.progress.loaded / $ctrl.progress.total * 100}}", md-mode="determinate")
