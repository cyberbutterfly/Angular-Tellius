form(ng-submit="$ctrl.onSubmit()" novalidate).container

    .wizard-boxed
        .wizard-boxed-header
            img(src="assets/img/dataset/xml.png")
            h1 XML options

        .wizard-boxed-body
            md-input-container
                label Row tag
                input(id="rowTag"
                      ng-model="$ctrl.FormData.rowTag"
                      required="required")
                      
            md-input-container(layout="row", layout-align="start center")
                div(flex="grow")
                    h4 Flatten?
                div(flex)
                    md-switch.green.m0(id="flatten", ng-model="$ctrl.FormData.flatten", aria-label="Flatten", required="required")
          

        .wizard-boxed-footer
            md-button(type="reset", class="transparent") Cancel
            md-button(type="submit" value="submit") Next

        .wizard-boxed-errors(ng-show="$ctrl.errors.length")
            span {{$ctrl.errors}}
