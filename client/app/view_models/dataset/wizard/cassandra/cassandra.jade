form(ng-submit="$ctrl.onSubmit()" novalidate).container

    .wizard-boxed
        .wizard-boxed-header
            img(src="assets/img/dataset/cassandra.png")
            h1 Cassandra
            
        .wizard-boxed-body
            md-input-container
                label Table name
                input(id="table"
                      ng-model="$ctrl.FormData.table"
                      required="required")
            md-input-container
                label Key space
                input(id="keyspace"
                      ng-model="$ctrl.FormData.keyspace"
                      required="required")
                      
            md-input-container
                label Partition key columns
                input(id="partitionKeyColumns"
                      ng-model="$ctrl.FormData.partitionKeyColumns"
                      required="required")
                      
            md-input-container
                label Clustering key columns
                input(id="clusteringKeyColumns"
                      ng-model="$ctrl.FormData.clusteringKeyColumns"
                      required="required")
                                
        .wizard-boxed-footer
            md-button(type="reset", class="transparent") Cancel
            md-button(type="submit" value="submit") Next

        .wizard-boxed-errors(ng-show="$ctrl.errors.length")
            span {{$ctrl.errors}}
