.vizpad-main-wrapper
	.tophead
		position relative
		justify-content space-between
		display flex
		align-items center
		h4
			font-size 23px
		.vizpad-head-title
			text-transform capitalize
			font-size 24px
			margin 0
			font-weight 400
			color #263238
			line-height 1
			&.edit
				color #78909c
		.title-name
			margin-bottom 0
			text-align center
			padding-bottom 13px
			font-size 20px
			cursor pointer
			&.active
				border-bottom 2px solid #26c6da
		.back-button
			z-index 9
			cursor pointer
			width 24px !important
			padding-right 10px
		.viz-back-button
			margin-top 15px
		.hierarchy-icon
			position absolute
			top 6px
			left 6px
			font-size 20px !important
			background #78909c
			-webkit-background-clip text
			-webkit-text-fill-color transparent
	.share-img
		height 21px
		position absolute
		top 7px
		left 7px

	.dark-theme
		background #2a2a2b
		background -webkit-linear-gradient(left top, #2a2a2b , #3e3e40)
		background -o-linear-gradient(bottom right, #2a2a2b, #3e3e40)
		background -moz-linear-gradient(bottom right, #2a2a2b, #3e3e40)
		background linear-gradient(to bottom right, #2a2a2b , #3e3e40)
		.viz-title, .close-button, .expand-button, .right-button, .compare-btn
			color #E0E0E3 !important
		.close-button
			background linear-gradient(to bottom right, #2a2a2b, #3e3e40)
			border-radius 50%
	.light-theme
		background-image url('./../../../../assets/light-theme.png')
	.default-theme
		background white

	.setting-graph-button
		.setting-graph-type
			position absolute
			top 8px
			left 8px
			&:hover, &.active
				left -32px
		&:hover
			.setting-graph-type
				left -32px

	.scatter-graph-button
		.scatter-graph-type
			position absolute
			top -1px
			left -1px
			&:hover, &.active
				left -41px
		&:hover
			.setting-graph-type
				left -41px

	.tophead .md-button.md-fab.md-mini
		width 35px
		height 35px
		margin-left 0
		box-shadow none

	.tophead .vizpad-search-icon
		font-size 15px
		margin-top 7px
	.tophead .white
		background #fff
		color #8CA4AF

	.tophead .red
		background #FF525E
		color #fff

	.tophead .red:hover
		background-color #FF525E !important
		color #fff

	.tophead .add-vizpad-button
		margin-left 10px

	.tophead .white:hover
		background-color #fff !important
		color #8CA4AF

	.tophead .line
			border-right 1px solid #DADADA
			width 0
			height 20px
			margin-left 7px
			margin-right 7px

	.tophead-right
		align-items center
		max-height 65px

	.plus-menu
		display none
		position absolute
		border-radius 6px
		background #fff
		min-width 180px
		max-height 200px
		right -75px
		top 53px
		z-index 99
		text-align center
		-webkit-box-shadow: 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
		-moz-box-shadow: 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
		box-shadow 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
		&.active
			display block !important
		.plus-menu-labels
			margin-left 5px
		.border-line
			position absolute
			top -10px
			left 70px
			border-bottom 10px solid white
			border-right 10px solid transparent
			border-left 10px solid transparent
		.md-button
			font-size 12px
			margin 0
			padding 0 10px
			width 100%
			text-align left

	.calendar-dropdown
		display inline-block

	.date-column-tick
		font-size 18px
		vertical-align middle
		margin-right 5px
		margin-left -8px

	.date-picker
		margin: 0
		position relative
		.mdi-calendar
			font-size 20px !important
			color rgba(0,0,0,0.3)
			position absolute
			top 20px
		.md-text
			font-size 14px
			color #415a65
		.timeline-resolution
			text-align center
			color #26c7db
			font-size 12px
			font-weight 700
			text-transform uppercase
			z-index 2
		md-select
			md-select-value
				min-width 130px
				text-align center
	.is-checked
		.name, .email
			color #26C6DA
	.timeline-setting
		.settings-img
			height 19px
			top 8px
			position absolute
			left 8px

	.md-select-icon
		color rgba(0,0,0,0.3) !important

	.date-picker-dropdown, .filter-dropdown
		width 150px
		-webkit-box-shadow 0px 0px 16px -4px rgba(0,0,0,0.30)
		-moz-box-shadow 0px 0px 16px -4px rgba(0,0,0,0.30)
		box-shadow 0px 0px 16px -4px rgba(0,0,0,0.30)
		md-option
			height 35px
			.md-text
				font-size 14px
				color #415a65

	.close-button
		opacity 0
		cursor pointer
		position absolute
		top -8px
		left -8px
		font-size 9px !important
		color #78909c
		z-index 2
		padding 6px
		background white
		border-radius 50%

	.expand-button
		z-index 2
		opacity 0
		cursor move
		position absolute
		right 2px
		top 0px
		color #78909c
		width 18px !important
	.error-dialog
		min-width 470px
		padding 20px
		.type-error
			min-height 100px
			color #f87481
			text-align center
			font-size 31px
			display flex
			background #fff
			justify-content center
			align-items center
			.cross
				border-radius 50%
				border 3px solid #f87481
				padding 16px 20px
			.close-btn
				position absolute
				color #000
				top 0
				right 0
				min-width 0px
				margin 0 5px
		.error-msg-wrapper
			padding 15px 0 35px 0
			.error-msg-heading
				text-align center
				font-size 30px
				display flex
				justify-content center
				padding-bottom 25px
				color #f87481
			.error-msg
				text-align center
				font-size 16px
	.success-dialog
		min-width 470px
		.type-success
			min-height 100px
			color rgb(129, 199, 132)
			text-align center
			font-size 31px
			display flex
			background #fff
			justify-content center
			align-items center
			.cross
				border-radius 50%
				border 3px solid rgb(129, 199, 132)
				padding 16px 16px
			.close-btn
				position absolute
				color #000
				top 0
				right 0
				min-width 0px
				margin 5px
				box-shadow none
				background transparent
				padding 5px
				line-height 0px
				min-height 20px
		.success-msg-wrapper
			padding 15px 0 35px 0
			.success-msg-heading
				text-align center
				font-size 30px
				display flex
				justify-content center
				padding-bottom 25px
				color rgb(129, 199, 132)
			.success-msg
				text-align center
				font-size 16px
	.chartcontainer
		z-index 0 !important
		margin-top 20px
		height 500px
		display flex
		position relative
		transition all .1s linear
		.viz-title-wrapper
			position absolute
			left 0
			top 18px
			text-transform capitalize
			right 0
			text-align center
			font-size 16px
			z-index 1
			.viz-title
				&.active
					border-bottom 1px solid #91A5AF
		&:hover
			.close-button, .expand-button
				opacity 1
			.right-icons
				opacity 1
			-webkit-box-shadow 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
			-moz-box-shadow 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
			box-shadow 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
		.filter-menu
			display none
			position absolute
			background #fff
			min-width 250px
			min-height 100px
			right -40px
			top 37px
			-webkit-box-shadow 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
			-moz-box-shadow 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
			box-shadow 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
			&.active
				display block !important
				max-width 435px
				padding 0px 15px 15px 15px
				z-index 3 !important
	.overflow-div
		position absolute
		top 0
		left 0
		right 0
		bottom 0
	.filter-menu-title
		margin 10px 2px
		.viz-type
			.buttons
				.rectangle
					width 100%
	.chartcontainer .subcharts-buttons
		width 100%

	.show
		z-index 9 !important
		.close-button, .expand-button
			opacity 1
		.right-icons
			opacity 1

	.applied-filter-container
		max-width 750px
		position absolute
		top 25px
		left 25px
		z-index 9

	.global-filters
		.filter-box
			margin 0 8px

	.options
		.icon-settings
			font-size 15px

	.axis-resolutions
		position absolute
		right 35px
		text-align center
		bottom 25px
		color #26c7db
		font-size 11px
		font-weight 700
		text-transform uppercase
		z-index 2

	md-progress-circular
	 .md-spinner-wrapper
			margin-left -17px
			margin-top -17px

	.filter-select-wrapper
		display flex
		align-items center
	.dialogcontent
		md-input-container
			margin 0
		.filter-select
			margin 0
			width 40%
			// display inline-block
		.filter-input
			top 11px
			padding-left 20px

	label.setting-label
		color rgba(0,0,0,0.4)

	.fake-overlay
		position absolute
		top 0
		bottom 0
		right 0
		left 0
		z-index 1
		&:focus
			outline 0 !important
	.toast-div
		position absolute
		z-index 9
		display block
		background #fff
		min-height: 100px
		right 0px
		top 65px
		opacity 1 !important
		-webkit-box-shadow: 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
		-moz-box-shadow: 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
		box-shadow: 0px 0px 16px -4px rgba(0, 0, 0, 0.3)
		max-width 200px
		padding 0px 20px 0px 20px
		h6
			margin-top 0 !important
		p
			color grey
			font-size 12px
			letter-spacing 0px
			margin 0 0 16px
			font-weight 900
			line-height 18px
		.border-outer-div
			width 28px
			height 28px
			position relative
			top -15px
			left 45%
			border-radius 50%
			background-color rgba(38, 199, 219, 0.3)
			.border-div
				width 20px
				height 20px
				position absolute
				top 4px
				left 4px
				border-radius 50%
				background-color rgba(38,199,219,0.5)
				.border-inner-div
					position absolute
					width 12px
					height 12px
					border-radius 50%
					background-color #26c7db
					left 4px
					top 4px
	.truncate
		width: 250px
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
	.pop-up
		-webkit-transition -webkit-transform 0.1s ease-out
		-moz-transition -moz-transform 0.1s ease-out
		-ms-transition -ms-transform 0.1s ease-out
		transition transform 0.1s ease-out
		-ms-transform: scale(0.1)
		-webkit-transform: scale(0.1)
		transform: scale(0.1)
		visibility hidden
		text-align center
		position absolute
		min-width 115px
		min-height 100px
		&.active
			-webkit-transform: scale(1.0)
			-moz-transform: scale(1.0)
			-ms-transform: scale(1.0)
			transform: scale(1.0)
			visibility initial
		.graph-options
			background white !important
			color grey !important
			margin 6px 3px !important
			box-shadow 0px 2px 7px 1px grey !important
			position absolute
			&:hover, &:active, &:focus, &:visited
				background white !important
				color grey !important
			&.option-1
				top 0
				left 0
			&.option-2
				bottom 0
				left 30%
				.chart-line
					width 18px !important
			&.option-3
				top 0
				right 0
	.color-palette-label
		display inline-block
	.color-palette
		display inline-block
		width 40%
		padding-left 25px
	.color-palette-select
		margin 5px 0px
		min-width 100px !important
		&.theme-select
			margin-left 39px
	.single-color-box
		width 17px
		height 17px
		transform none !important
		display inline-block
.vizpad-dialog-wrapper
	.single-color-box
		width 17px
		height 17px
		transform none !important
		display inline-block

.vizpad-popup	{
	&.ngdialog-theme-default {
	    .ngdialog-overlay {
	    }

	    .ngdialog-content {
	        background: $white
	        border-radius: 2px
	        color: $body-color
	        font-family: $body-font-family
	        font-size: $font-size-root
	        line-height: $line-height
	        padding: 30px 40px
	        width: 500px

	        .ngdialog-close {
	            &:before {
	                color: rgba(0,0,0,0.25)
	                font-size: 22px
	                height: 22px
	                width: 22px
	                line-height: 22px
	                top: 4px
	                right: 7px
	                font-weight: bold
	                @include transform(0.15s)
	            }

	            &:hover {
	                &:before {
	                    color: rgba(0,0,0,0.8)
	                }
	            }
	        }

	        .header {
	            .title {
	                display: inline-block
	                vertical-align: middle
	                padding: 0 2px 20px 2px
	                font-size: 24px
	                color: $gray-darkest
	            }

	            .selected-column {
	                display: inline-block
	                vertical-align: middle
	                padding: 0 2px 20px 10px
	                font-size: 21px
	                color: $gray-light
	                font-weight: 300
	            }
	        }

	        .content {
	        }

	        .footer {
	            text-align: right
	            padding-top: 15px
	            margin-right: -4px
	        }

	        .errors {
	            color: $red
	            font-size: 13px
	            line-height: 1.4
	        }

	        hr {
	            margin: 20px -40px
	        }
	    }
	}

	&.big {
	    .ngdialog-content {
	        width: 900px

	        @media (max-width: 959px) {
	            width: 740px
	        }
	    }
	}
}
