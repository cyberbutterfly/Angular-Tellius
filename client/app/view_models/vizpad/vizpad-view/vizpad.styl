.vizpad-main-wrapper
  .head
    width 25%
    display flex
    flex-direction: row
    align-items: center
    position relative
    h4
    	margin-top: 17px !important
  .smallscreen
  	display none
  .menu-btn-small
  	position absolute
  	right 0
  .menu-setting
  	right: 0px
  	top: 0px
  	z-index: 9
  .search-box-wrapper
    padding-bottom 10px
  .search-vizpad-box
    background transparent
    margin 5px 5px 0
  .filter-dialog
  	.shareInput
  		margin 0
  	.filter-select
  		margin 0
  		max-width 105px
  		display inline-block
  	.filter-input
  		margin 0px
  		width 77%
  		top 11px
  		left 13px
  .temp-vizpad-title.active
    border-bottom 1px solid #91a5af
    padding 5px 0px
    max-width 160px
  .vizpad-item
  	display inline-block
  	min-width 320px
  	margin 10px 10px
  	min-height 270px
  	box-shadow 0px 0px 2px 0px lightgrey
  	&:hover
  		.vizpad-overlay
  			display flex !important
  		.delete-vizpad
        border-radius 50%
        opacity 1
        position absolute
        font-size 10px !important
        padding 7px
        top -10px
        left -10px
        right initial
        background #fff
        cursor pointer
        color rgba(37,44,58,0.8)
  	.vizpad-display
  		min-height 220px
  		background white
  		display flex
  		justify-content center
  		position relative
  		.t
  			font-size 100px
  			margin-top 55px
  			color white
  		.vizpad-overlay
  			position absolute
  			top 0
  			left 0
  			right 0
  			bottom 0
  			justify-content center
  			background rgba(37,44,58,.8)
  			display none
  			.view-button
  				top 35%
  				position absolute
  				right 35%
  	.vizpad-title
      min-height 40px
      position relative
      background white
      padding 10px 20px
      color #344750
      font-size 15px
      border-top 1px solid lightgrey
      text-transform capitalize
      div
        max-width 250px
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
      .user-img
        position absolute
        width 40px
        border-radius 50%
        height 45px
        right 15px
        top -23px
      .active-time
        font-size 12px
        padding 3px 0
        color grey


  .chart-icons
    width 21px !important
    &.combined-graph
      vertical-align -3px
      font-size 19px !important

  .input-box
  	margin 13px 0 -5px 0

  md-fab-actions[aria-hidden="true"]
  	display none
  md-fab-actions[aria-hidden="false"]
  	display flex
  md-fab-speed-dial
  	z-index 3 !important

  .drill-trend-container
    display flex
    justify-content center
    margin 15px
  .drill-trend-close-btn
    text-align right

  .min-width-200
    min-width 200px
  .viz-img
    max-height 200px
    margin-top 10px
    max-width 300px
  .temp-viz-img
    max-height 220px
  .create-button
    margin-top 10px
  .viz-view
    .graph-div
      margin 40px 25px 0
  .create-dialog
    padding-top 0
    .input-container
      min-width 100%
      padding-bottom 0
      margin 17px 0 0 0
  .vizpad-input-container
  	min-width 100%
  	padding-bottom 0
  	margin 2px
  .show-viz-div
  	display flex
  	justify-content center
  	margin 50px 15px
  .hierarchy-header
    padding-bottom 10px
    border-bottom 1px solid lightgray
    margin-bottom 10px
  .hierarchy-wrapper
    position relative
    .add-hierarchy-icon
      position absolute
      right 0
      border 2px solid
      border-radius 50%
      font-size 10px
      padding 3px
      color #36c398
      cursor pointer
      z-index 5
      top -22px
    .hierarchy
      margin-top 25px
      text-transform capitalize
      line-height 25px
      margin-bottom 18px
      position relative
      .dimension-input
        height 45px
      .delete-hierarchy
        opacity 0
        position absolute
        right 6px
        z-index 1
        cursor pointer
        top 6px
        font-size 11px
      .title-div
        &:hover
          background #f4f4f4
          .delete-hierarchy
            opacity 1
        .hierarchy-title
          padding-bottom 3px
          line-height 20px
          font-size 16px
          margin 0
          font-weight 400
          color #263238
      .dimension
        position relative
        .bar
          display inline-block
          width 14px
          height 14px
          border-bottom 1px solid
          border-left 1px solid
          margin-right 3px
          vertical-align 4px
        .delete-dimension
          opacity 0
          position absolute
          right 7px
          z-index 1
          cursor pointer
          top 7px
          font-size 11px
        &:hover
          background #f4f4f4
          .delete-dimension
            opacity 1
      .add-dimension-div
        cursor pointer
        color #26c6da
        .add-icon
          margin 5px
          font-size 12px
  .empty-hierarchy
    text-align center
    .icon-wrapper
      margin 25px 0px
      .empty-add-hierarchy-icon
        border 5px solid
        border-radius 50%
        font-size 65px
        padding 3px
        color #36c398
        cursor pointer
        z-index 5
    .add-hierarchy-title
      max-width 300px
      margin 0 auto
  .plus-button
    position relative
    margin-top 0
